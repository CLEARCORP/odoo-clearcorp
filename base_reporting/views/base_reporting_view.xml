<openerp>
    <data>
        <record id="view_general_configuration_base_reporting" model="ir.ui.view">
            <field name="name">view_general_configuration_base_reporting</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='report']" position="inside">
                        <label for="logo_report"/>
                        <div>
                            <field name="logo_report" widget="image" class="oe_inline oe_avatar" />                            
                        </div>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
